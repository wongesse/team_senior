<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin">

    <Button
        android:id="@+id/start_sensor"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Load Sensors" />

    <TextView
        android:id="@+id/sensor_textx"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="138dp"
        android:layout_toEndOf="@+id/sensor_textz"
        android:textSize="25sp"
        android:text="az"/>


    <TextView
        android:id="@+id/sensor_texty"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensor_textx"
        android:layout_marginTop="0dp"
        android:layout_toEndOf="@+id/sensor_textx"
        android:textSize="25sp"
        android:text="ay"/>

    <TextView
        android:id="@+id/sensor_textz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/sensor_texty"
        android:layout_centerHorizontal="true"
        android:textSize="25sp"
        android:text="ay"/>

    <TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:gravity="bottom">

        <TableRow>

            <Button
                android:id="@+id/help_button"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="@string/help" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/add_contact_button"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="@string/add_contact" />

        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/edit_contact_button"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="@string/edit_contact" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/settings_button"
                android:layout_width="0dip"
                android:layout_height="match_parent"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:layout_weight="1"
                android:text="@string/settings" />
        </TableRow>
    </TableLayout>
</RelativeLayout>

